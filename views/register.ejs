<%- include('partials/header', { page: "/register" }) %>

<div class="container mx-auto p-6">
  <h2 class="text-2xl font-bold mb-4">Register</h2>

  <% if (successMessage) { %>
    <div class="alert mt-4">
      <svg class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      <span><%= successMessage %></span>
    </div>
    <br>
    <a href="/login" class="btn btn-success">Proceed to Log in</a>
  <% } else { %>
    <form method="POST" action="/register" class="space-y-4 max-w-md">
      <input class="input input-bordered w-full" type="text" name="userName" placeholder="User Name" required value="<%= userName %>">
      <input class="input input-bordered w-full" type="password" name="password" placeholder="Password" required>
      <input class="input input-bordered w-full" type="password" name="password2" placeholder="Confirm Password" required>
      <input class="input input-bordered w-full" type="email" name="email" placeholder="Email Address" required>
      <button class="btn btn-primary w-full" type="submit">Register</button>
    </form>

    <% if (errorMessage) { %>
      <div class="alert alert-error mt-4">
        <svg class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        <span><%= errorMessage %></span>
      </div>
    <% } %>
  <% } %>
</div>

<%- include('partials/footer') %>
